{% extends 'base1.html.twig' %}

{% block title %}Register

{% endblock %}

{% block body %}
	{% block stylesheets %}
		<style>
			.invalid {
				color: red;
				display: block;
				border-radius: 10px;
				/* box-shadow: 0 0 10px black; */
				box-shadow: rgba(244, 239, 239, 0.827) 0 -23px 25px 0 inset, rgba(255, 255, 255, 0.15) 0 -36px 30px 0 inset, rgb(255, 255, 255) 0 -79px 40px 0 inset, rgba(0, 0, 0, 0.06) 0 2px 1px, rgb(235, 235, 235) 0 4px 2px, rgba(253, 253, 253, 0.826) 0 8px 4px, rgba(255, 255, 255, 0.09) 0 16px 8px, rgba(255, 255, 255, 0.09) 0 32px 16px;
			}
			.valid {
				display: none;
				color: green;
			}
		</style>
	{% endblock %}
	<div class="container mt-5">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="card">
					<h5 class="card-header text-center">Register</h5>
					<div class="card-body">
						{{ form_errors(registrationForm) }}
						{{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
						<div class="form-group">
							{{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'control-label'}}) }}
							{#! here if we have add function then its id will be registration_form_username #}
							{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(registrationForm.username) }}
						</div>
						{#! here onkeyup means password validation will be performed in real time as user types their password #}
						<div
							class="form-group">
							{#! in validation.js we have id registration_form_plainPassword which is generated by symfony  #}
							{{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'control-label'}}) }}
							{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'password', 'onkeyup': 'validatePassword()'}}) }}
							<div class="text-center mt-1">
								<p id="length" class="invalid">Password must be at least 8 characters</p>
								<p id="uppercase" class="invalid">Password must contain at least one uppercase letter</p>
								<p id="lowercase" class="invalid">Password must contain at least one lowercase letter</p>
								<p id="special" class="invalid">Password must contain at least one special character</p>
								<p id="digit" class="invalid">Password must contain at least one digit</p>
								<p id="success" class="valid" style="display: none;">Your password is valid.</p>
								{# here we have removed default message that symfony provides and instead above para will be shown #}
							</div>
						</div>

						<div class="form-group">
							{{ form_widget(registrationForm.agreeTerms) }}
							{{ form_label(registrationForm.agreeTerms, 'Agree to terms', {'label_attr': {'class': 'form-check-label'}}) }}
							{{ form_errors(registrationForm.agreeTerms) }}
							<div class="text-center mt-2">
								<button type="submit" class="btn btn-primary">Register</button>
							</div>
						</div>

						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
