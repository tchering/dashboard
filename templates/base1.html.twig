                    <input id="mot" name="mot" onkeydown="enter(event)" class="form-control mx-2" type="search"
                        placeholder="Research" aria-label="Search">
                    <a href="javascript:chercher()" class="btn btn-success">
                        <i class="fa fa-search"></i>
                    </a>
                    <!-- //!if user is logged in the username will be shown  -->
                    {% if app.user.username is defined %}
                    <div class="dropdown mx-2">
                        <a href="" class="btn btn-success" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">

                            <a href="user&action=logout" class="dropdown-item">Logout</a>
                            <a href="user&action=changePassword" class="dropdown-item">Change Password</a>
                        </ul>
                    </div>
                    <!--//! else not loggin in the menu changes accordingly -->
                    {% else %}
                    <div class="dropdown mx-2">
                        <a href="" class="btn btn-success" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">

                            <a href="user&action=login" class="dropdown-item">Login</a>
                            <a href="user&action=register" class="dropdown-item">Register</a>
