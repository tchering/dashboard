{% extends "base1.html.twig" %}

{% block title %} CLient{% endblock %}
{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center ">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="nameInput" class="form-label">RANG</label>
                            <input type="text" class="form-control" id="nameInput" value="{{ menu.rang }}"
                                {{disabled}}>
                        </div>
                        <div class="mb-3">
                            <label for="addressInput" class="form-label">LIBELLE</label>
                            <input type="text" class="form-control" id="addressInput" value="{{ menu.libelle }}"
                                {{disabled}}>
                        </div>
                        <div class="mb-3">
                            <label for="addressInput" class="form-label">URL</label>
                            <input type="text" class="form-control" id="addressInput" value="{{ menu.url}}"
                                {{disabled}}>
                        </div>
                        <div class="mb-3">
                            <label for="addressInput" class="form-label">icon</label>
                            <input type="text" class="form-control" id="addressInput" value="{{ menu.icon}}"
                                {{disabled}}>
                        </div>
                        <div class="mb-3">
                            <label for="addressInput" class="form-label">ROLE</label>
                            <input type="text" class="form-control" id="addressInput" value="{{ menu.role}}"
                                {{disabled}}>
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn btn-primary"
                                onclick="retour();return false;">Return</button>
                            <button type="button" class="btn btn-primary" onclick="supprimer()">Delete</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% block script %}
<script>
    const retour = () => {
        document.location.href = "{{path('app_menu')}}";
    }

    const supprimer = () => {
        let response = confirm(`Do you really want to delete {{menu.libelle}} from the list?`)
        if (response) {
            let id = "{{menu.id}}";
            document.location.href = `/menu/delete/${id}`;
        }
    }
</script>
{% endblock %}

{% endblock %}